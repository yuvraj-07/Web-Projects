<body onclick="aud()">
<div id="main"></div>
<h4>BMI Calculator</h4>
  <input type="number" placeholder="Weight in KG" id="txt" onmouseover="up()"><br><br>
  
  <input type="number" placeholder="Height in CM" id="num" onmouseover="up()"><br><br><br>
  
  
  <button type="submit" id="btn" onclick="show()">Calculate</button><br><br>
  
  <button type="submit" id="btn" onclick="hide()">Clear</button><br><br><br>
  <div id="hr"></div><br><br>
  
<input type="number" id="demo" placeholder="Your BMI here..." readonly><br><br>

<input type="text" id="teens" placeholder="Hover me to show category" readonly onmouseover="see()">
<audio controls id="audio">
  <source src = "https://dl.dropbox.com/s/44bnk4fnjb6qxbl/Warriyo%20-%20Mortals%20%28feat.%20Laura%20Brehm%29%20%5BNCS%20Release%5D.mp3?dl=0">
</audio>
  
  <script>
    swal({
    title: "BMI calculator project version 1.0",
    text: "Hello viewers, this is the small effort from my side by making this project. This is the first version of this project. Other functional features added in version 2.0‚ö°. Now then enjoy this project by using all the featuresüôèüî• ",
    icon: "success",
    button: "OK"})
  </script>
  
  
<script>
  function show() {
    var a = parseInt(document.getElementById("txt").value);
    var b = parseInt(document.getElementById("num").value);
    
    
    let bmi = document.getElementById("demo").value = (a / ((b * b) / 10000)).toFixed(2); 
    
    document.getElementById("demo").style.backgroundColor = "white";
    document.getElementById("demo").style.border = "3px solid black";
    document.getElementById("demo").style.color = "black";
    document.getElementById("demo").style.width = "230px";
    document.getElementById("demo").style.marginLeft = "55px";
    





    
    if (bmi < 18.5) {
      document.getElementById("teens").value = "Underweight";
      
    }
    else if (bmi >= 18.5 && bmi <= 25)
    {
        document.getElementById("teens").value = "Healthy weight";
    }
    else if (bmi > 25 && bmi <= 30)
    {
        document.getElementById("teens").value = "Overweight";
    }
    else if (bmi > 30 && bmi <= 35)
    {
        document.getElementById("teens").value = "Obese Class 1";
    }
    else if(bmi > 35 && bmi <= 40)
    {
        document.getElementById("teens").value = "Obese Class 2";
    }
    else if (bmi > 40) {
      document.getElementById("teens").value = "Obese Class 3";
    }
    else
    {
        swal({
        title: "Value should not be blank",
        text: "Please fill the value. HEIGHT and WEIGHT should not be blanküôè",
          icon: "error",
          button: "OK"})
        document.getElementById("demo").style.backgroundColor = "black";
        document.getElementById("demo").style.border = "3px solid black";
        document.getElementById("demo").style.color = "white";
        document.getElementById("demo").style.width = "130px";
        document.getElementById("demo").style.marginLeft = "103px";
    }
    
  }
  function hide() {
    document.getElementById("txt").value = "";
    document.getElementById("num").value = "";
    document.getElementById("demo").value = "";
    document.getElementById("teens").value = "";
    document.getElementById("demo").style.backgroundColor = "black";
    document.getElementById("demo").style.border = "3px solid black";
    document.getElementById("demo").style.color = "white";
    document.getElementById("demo").style.width = "130px";
    document.getElementById("demo").style.marginLeft = "103px";
    
  }
  function see() {
   swal({
    title: "Given Category",
    text: "|ùêîùêßùêùùêûùê´ùê∞ùêûùê¢ùê†ùê°ùê≠ - <18.5 kg/m¬≤|, |ùêáùêûùêöùê•ùê≠ùê°ùê≤ ùê∞ùêûùê¢ùê†ùê°ùê≠ - 18.5kg/m¬≤- 25kg/m¬≤|, |ùêéùêØùêûùê´ùê∞ùêûùê¢ùê†ùê°ùê≠ - 25kg/m¬≤- 30kg/m¬≤|, |ùêéùêõùêûùê¨ùêû ùêúùê•ùêöùê¨ùê¨ ùüè - 30kg/m¬≤- 35kg/m¬≤|, |ùêéùêõùêûùê¨ùêû ùêúùê•ùêöùê¨ùê¨ ùüê - 35kg/m¬≤- 40kg/m¬≤|, |ùêéùêõùêûùê¨ùêû ùêúùê•ùêöùê¨ùê¨ ùüë - >40kg/m¬≤|",
    icon: "success",
    button: "Continue"})
  }
  function up() {
    document.getElementById("demo").style.backgroundColor = "black";
    document.getElementById("demo").style.border = "3px solid black";
    document.getElementById("demo").style.color = "white";
    document.getElementById("demo").value = "";
    document.getElementById("teens").value = "";
    document.getElementById("demo").style.width = "130px";
    document.getElementById("demo").style.marginLeft = "103px";
  }
  function aud() {
    var a = document.getElementById("audio");
    a.play();
    
  }
  
</script>






